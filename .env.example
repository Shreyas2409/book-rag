# Neo4j Configuration
NEO4J_URI=neo4j://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASS=pass

# Agent API URL (used by UI)
AGENT_API=http://localhost:7005

# Ollama Configuration (optional, defaults to host.docker.internal:11434)
# OLLAMA_BASE_URL=http://host.docker.internal:11434

# Chroma Directory (optional, for local vector storage fallback)
# CHROMA_DIR=./chroma/books

# ── New in v2 ──────────────────────────────────────────────────────────

# Eval Agent (LLM-as-Judge)
EVAL_ENABLED=true
# EVAL_MODEL=llama3.1:8b  # model used by the judge (same Ollama instance)

# Context Window
MAX_HISTORY_TURNS=10          # sliding window size for conversation memory
CONTEXT_BUDGET_CHARS=12000    # max chars assembled in the prompt
SUMMARY_TRIGGER=6             # summarise after this many turns

# Observability
LOG_LEVEL=INFO
